@model School.Models.User

@{
    ViewBag.Title = "Register";
}

<!DOCTYPE html>
<html>
<head>

    <title>User Registration</title>
    <link rel="stylesheet" type="text/css" href="~/Content/css/RegisterValidation.css">
    <script src="~/Scripts/Register/Register.js"></script>

</head>
<body class="bg-light">
    <div class="d-flex align-items-center vh-100">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <h1 class="mb-4">User Registration</h1>
                    <form class="form-horizontal" >



                        <div id="Part1">
                            @Html.Partial("~/Views/Registration/_Part1.cshtml")
                            <button type="button" onclick="nextSection()" class="custom-button">Next</button>

                        </div>

                        <div id="Part2" style="display: none;">
                            @Html.Partial("~/Views/Registration/_Part2.cshtml")
                            <button onclick="previousSection()" class="custom-button">Previous</button>

                        </div>

                        
                        <input type="button" value="Register" id="registerButton" onclick="RegisterBtnClicked();" class="custom-button" style="display: none;">

                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>